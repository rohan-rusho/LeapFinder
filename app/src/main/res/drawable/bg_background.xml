<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base Layer: Deep navy to rich blue gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FF3A3A"
            android:endColor="#274690"/>
        </shape>
    </item>

    <!-- Soft blue glow at the top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#00169D"
            android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Subtle vignette around edges for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1100dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#303F9F"
                android:endColor="#0A174E66"/>
        </shape>
    </item>

    <!-- Bottom shadow for depth -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#66000000"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>